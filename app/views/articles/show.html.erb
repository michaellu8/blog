<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Body:</b>
  <%= @article.body %>
</p>

<p>
  <b>Author:</b>
  <%= @article.author ? @article.author.name : "no author" %>
</p>


<%= form_for [@article, @comment] do |f| %>
  <%= f.label :body %><br />
  <%= f.text_area :body %>
  <%= f.submit %>
  
  <% end %>

  <% @article.comments.each do |c| %>
   <%= c.body %>
   <br/>
   <% end%>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
